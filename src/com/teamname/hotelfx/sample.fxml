<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="com.teamname.hotelfx.Controller"
            xmlns:fx="http://javafx.com/fxml">


    <left>
        <GridPane hgap="7" vgap="7">
            <padding>
                <Insets left="30" top="30" right="30" bottom="30"/>
            </padding>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" text="Guest Details" GridPane.halignment="CENTER" />
            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" text="First name: "/>
            <TextField fx:id="guest_firstName" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" text="Last name: "/>
            <TextField fx:id="guest_lastName" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT" text="Gender: "/>
            <TextField fx:id="guest_gender" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="RIGHT" text="Address: "/>
            <TextField fx:id="guest_address" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="RIGHT" text="City: "/>
            <TextField fx:id="guest_city" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="RIGHT" text="Zip Code: "/>
            <TextField fx:id="guest_zipCode" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="RIGHT" text="Country: "/>
            <TextField fx:id="guest_country" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.halignment="RIGHT" text="Phone number: "/>
            <TextField fx:id="guest_phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.halignment="RIGHT"
                       editable="false"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.halignment="RIGHT" text="Email: "/>
            <TextField fx:id="guest_email" GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.halignment="RIGHT"
                       editable="false"/>

        </GridPane>
    </left>

    <center>
        <HBox>
            <padding>
                <Insets left="30" top="30" right="30" bottom="30"/>
            </padding>
            <ListView fx:id="teacher_list"/>
            <GridPane hgap="7" vgap="7">
                <padding>
                    <Insets left="30" right="30"/>
                </padding>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" text="Room Details" GridPane.halignment="CENTER" />
                <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" text="Room number: "/>
                <TextField fx:id="room_number" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="RIGHT"
                           editable="false"/>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" text="Floor: "/>
                <TextField fx:id="room_floor" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT"
                           editable="false"/>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT" text="Description: "/>
                <TextField fx:id="room_description" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="RIGHT"
                           editable="false"/>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="RIGHT" text="Start date: "/>
                <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="RIGHT" text="End date: "/>
                <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            </GridPane>

        </HBox>
    </center>

    <right>
        <HBox>
            <padding>
                <Insets left="30" top="30" right="30" bottom="30"/>
            </padding>
            <ListView fx:id="teacherclasses_list"/>
        </HBox>
    </right>

</BorderPane>